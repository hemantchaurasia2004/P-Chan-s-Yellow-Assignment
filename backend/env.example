# MongoDB Configuration
# Option 1: Full connection URL (recommended for Render)
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/?appName=Cluster0

# Option 2: Separate credentials (alternative)
# MONGODB_HOST=cluster0.xxx.mongodb.net
# MONGODB_USERNAME=your_username
# MONGODB_PASSWORD=your_password

# Database name
DATABASE_NAME=chatbot_platform

# JWT Configuration (IMPORTANT: Use a strong secret in production!)
JWT_SECRET_KEY=your-super-secret-jwt-key-minimum-32-characters-long

# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key

# CORS Origins (comma-separated list of allowed frontend URLs)
# Add your deployed frontend URL here
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend.vercel.app

# Server Port (Render sets this automatically)
PORT=8000
